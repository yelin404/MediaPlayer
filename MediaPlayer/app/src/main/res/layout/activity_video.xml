<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Music.MusicActivity"
    android:orientation="vertical"
    android:background="@drawable/video_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@mipmap/search_background">

        <ImageView
            android:id="@+id/exit_Iv"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="正在播放"
            android:textColor="#FF00BFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <VideoView
        android:id="@+id/video_vv"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/video_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="喜羊羊"
        android:textSize="30sp"
        android:textColor="#FF00BFFF"
        android:gravity="center"
        android:layout_marginTop="30dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/play_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/play"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_continue_play"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/play"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/pause_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/pause"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>



        <Button
            android:id="@+id/pre_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/play_btn"
            android:background="@drawable/pre" />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/next"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/play_btn"
            android:layout_marginLeft="30dp"/>



    </RelativeLayout>



</LinearLayout>